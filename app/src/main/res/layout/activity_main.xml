<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <com.yuliyang.gradleallinone.XForMode
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:scaleType="fitXY" />

    <com.yuliyang.gradleallinone.ClipTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.yuliyang.gradleallinone.ShimmerTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="这是一段测试文字"
        android:textSize="24sp" />

    <TextSwitcher
        android:id="@+id/textSwitcher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inAnimation="@anim/slide_in_bottom"
        android:outAnimation="@anim/slide_out_top"
        android:textAlignment="center" />
</LinearLayout>